@using System.Security.Principal

@if (User.Identity.IsAuthenticated)
{
    <nav class="clearfix pull-right">
        <ul role="navigation">
            <li>@User.Identity.Name</li>
            <li><a asp-controller="Admin" asp-action="Index">Admin</a></li>
            <li><a asp-area="AzureAD" asp-controller="Account" asp-action="SignOut">Sign Out</a></li>
        </ul>
    </nav>
}

<environment names="Development,Staging">
    @if (!User.Identity.IsAuthenticated)
    {
        <a asp-area="AzureAD" asp-controller="Account" asp-action="SignIn">Sign In</a>
    }
</environment>